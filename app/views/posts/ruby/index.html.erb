<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <strong>Post Something</strong>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @owner.user_name %></h5>
    <p class="card-text">Share your thought!</p>
    <%= link_to '<button type="button" class="btn btn-primary">New Post</button>'.html_safe , new_user_post_path(@userid) %>
  </div>
</div>
<br>

<h1>Posts</h1>
<br>
    <% @posts.each do |post| %>
      <div class="card">
      <div class="card-header">
      <p style="color:blue;"><%= post.user_name %></p>
      </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= post.post_content %></p><% c = Post.find(post.id) %>
      <footer class="blockquote-footer">Post at <%= c.created_at_for_database %>
      <cite title="Source Title"></cite></footer>
    </blockquote>
    <% @userid == post.user_id %>

    <%= link_to "Edit this post", post %>
        </p>
    <%= link_to '<button type="button" class="btn btn-primary">View this Post</button>'.html_safe , new_user_post_comment_path(@userid,post.id) %>
    </div>
    <br>
  </div>
  <br>
<% end %>
</div>
